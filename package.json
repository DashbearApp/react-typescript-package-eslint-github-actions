{
    "name": "react-ts-package-eslint-github-actions",
    "version": "1.0.0",
    "description": "React typescript flavored package with ESLint, Prettier configs and CI/CD pipelines using Github Actions",
    "author": "dashbearapp",
    "license": "SEE LICENSE IN LICENSE",
    "repository": "dashbearapp/react-ts-package-eslint-github-actions",
    "main": "dist/index.js",
    "module": "dist/index.modern.js",
    "source": "src/index.tsx",
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "build": "microbundle --compress true --jsx React.createElement --jsxFragment React.Fragment --format modern,cjs",
        "start": "microbundle watch --no-compress --jsx React.createElement --jsxFragment React.Fragment --format modern,cjs",
        "prepare": "run-s build",
        "test": "run-s test:unit test:lint test:build",
        "test:build": "run-s build",
        "test:lint": "eslint --ext .tsx src",
        "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
        "test:watch": "react-scripts test --env=jsdom",
        "predeploy": "cd example && yarn install && yarn run build",
        "deploy": "gh-pages -d example/build"
    },
    "peerDependencies": {
        "react": "^16.14.0"
    },
    "dependencies": {
        "@apollo/client": "^3.3.14",
        "@chakra-ui/icons": "^1.0.9",
        "@chakra-ui/react": "^1.5.0",
        "@emotion/react": "^11.1.5",
        "@emotion/styled": "^11.1.5",
        "formik": "^2.2.6",
        "framer-motion": "^4.1.3",
        "graphql": "^15.5.0",
        "graphql-tag": "^2.11.0",
        "radium": "^0.26.1",
        "yup": "^0.32.9"
    },
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/plugin-proposal-decorators": "^7.13.5",
        "@babel/plugin-proposal-optional-chaining": "^7.13.12",
        "@testing-library/jest-dom": "^5.11.10",
        "@testing-library/react": "^11.2.6",
        "@testing-library/user-event": "^13.1.1",
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.37",
        "@types/radium": "^0.24.3",
        "@types/react": "^16.14.5",
        "@types/react-dom": "^16.9.12",
        "@types/yup": "^0.29.11",
        "@typescript-eslint/eslint-plugin": "^4.21.0",
        "@typescript-eslint/parser": "^4.21.0",
        "babel-eslint": "^10.1.0",
        "babel-plugin-file-loader": "^2.0.0",
        "babel-plugin-inline-react-svg": "^2.0.1",
        "babel-plugin-transform-react-jsx": "^6.24.1",
        "core-js": "^3.10.1",
        "cross-env": "^7.0.3",
        "eslint": "^7.23.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-config-standard-react": "^11.0.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-promise": "^4.3.1",
        "eslint-plugin-react": "^7.23.1",
        "eslint-plugin-standard": "^5.0.0",
        "gh-pages": "^3.1.0",
        "microbundle": "^0.13.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "react": "^16.14.0",
        "react-dom": "^16.14.0",
        "react-scripts": "^4.0.3",
        "typescript": "^4.2.4"
    },
    "files": [
        "dist"
    ]
}
