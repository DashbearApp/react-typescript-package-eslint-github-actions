{
    "name": "react-ts-package-eslint-github-actions",
    "version": "1.0.0",
    "description": "React typescript flavored package with ESLint, Prettier configs and CI/CD pipelines using Github Actions",
    "author": "dashbearapp",
    "license": "SEE LICENSE IN LICENSE",
    "repository": "dashbearapp/react-ts-package-eslint-github-actions",
    "main": "dist/index.js",
    "module": "dist/index.modern.js",
    "source": "src/index.tsx",
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "build": "microbundle --compress true --jsx React.createElement --jsxFragment React.Fragment --format modern,cjs",
        "start": "microbundle watch --no-compress --jsx React.createElement --jsxFragment React.Fragment --format modern,cjs",
        "prepare": "run-s build",
        "test": "run-s test:unit test:lint test:build",
        "test:build": "run-s build",
        "test:lint": "eslint --ext .tsx src",
        "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
        "test:watch": "react-scripts test --env=jsdom",
        "predeploy": "cd example && yarn install && yarn run build",
        "deploy": "gh-pages -d example/build"
    },
    "peerDependencies": {
        "react": "^16.0.0"
    },
    "dependencies": {
        "@apollo/client": "^3.3.11",
        "@chakra-ui/icons": "^1.0.5",
        "@chakra-ui/react": "^1.3.3",
        "@emotion/react": "^11.1.5",
        "@emotion/styled": "^11.1.5",
        "formik": "^2.2.6",
        "framer-motion": "^3.10.0",
        "graphql": "^15.5.0",
        "graphql-tag": "^2.11.0",
        "radium": "^0.26.1",
        "yup": "^0.32.9"
    },
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/plugin-proposal-decorators": "^7.13.5",
        "@babel/plugin-proposal-optional-chaining": "^7.13.8",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.5.0",
        "@testing-library/user-event": "^7.2.1",
        "@types/jest": "^25.1.4",
        "@types/node": "^12.12.38",
        "@types/radium": "^0.24.3",
        "@types/react": "^16.9.27",
        "@types/react-dom": "^16.9.7",
        "@types/yup": "^0.29.11",
        "@typescript-eslint/eslint-plugin": "^4.16.1",
        "@typescript-eslint/parser": "^4.16.1",
        "babel-eslint": "^10.0.3",
        "babel-plugin-file-loader": "^2.0.0",
        "babel-plugin-inline-react-svg": "^2.0.1",
        "babel-plugin-transform-react-jsx": "^6.24.1",
        "core-js": "^3.9.1",
        "cross-env": "^7.0.2",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-config-standard-react": "^11.0.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-standard": "^5.0.0",
        "gh-pages": "^2.2.0",
        "microbundle": "^0.13.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-scripts": "^3.4.1",
        "typescript": "^3.7.5"
    },
    "files": [
        "dist"
    ]
}
